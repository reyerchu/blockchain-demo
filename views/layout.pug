doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='A live blockchain demo in a browser.')
    meta(name='author', content='Anders Brownworth')
    link(rel='icon', href=baseUrl + '/favicon.ico')

    title Blockchain Demo

    link(rel='stylesheet', href=baseUrl + '/stylesheets/lib/bootstrap.min.css')
    link(rel='stylesheet', href=baseUrl + '/stylesheets/lib/bootstrap-theme.min.css')
    link(rel='stylesheet', href=baseUrl + '/stylesheets/lib/bootstrap-horizon.css')
    link(rel='stylesheet', href=baseUrl + '/stylesheets/lib/ladda-themeless.min.css')
    link(rel='stylesheet', href=baseUrl + '/stylesheets/lib/ie10-viewport-bug-workaround.css')
    link(rel='stylesheet', href=baseUrl + '/stylesheets/blockchain.css')

    script(src=baseUrl + '/javascripts/lib/jquery.min.js')
    script(src=baseUrl + '/javascripts/lib/bootstrap.min.js')
    script(src=baseUrl + '/javascripts/lib/spin.min.js')
    script(src=baseUrl + '/javascripts/lib/ladda.min.js')
    script(src=baseUrl + '/javascripts/lib/ie10-viewport-bug-workaround.js')
    script(src=baseUrl + '/javascripts/lib/sha256.js')
    script(src=baseUrl + '/javascripts/blockchain.js')

  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{__('DeFintek.io')}
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li(class={active: page === 'hash'})
              a(href=baseUrl + '/hash') #{__('Hash')}
            li(class={active: page === 'block'})
              a(href=baseUrl + '/block') #{__('Block')}
            li(class={active: page === 'blockchain'})
              a(href=baseUrl + '/blockchain') #{__('Blockchain')}
            li(class={active: page === 'distributed'})
              a(href=baseUrl + '/distributed') #{__('Distributed')}
            li(class={active: page === 'tokens'})
              a(href=baseUrl + '/tokens') #{__('Tokens')}
            li(class={active: page === 'coinbase'})
              a(href=baseUrl + '/coinbase') #{__('Coinbase')}

    block content
